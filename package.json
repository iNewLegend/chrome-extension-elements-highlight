{
    "name": "inewlegend/monorepo-chrome-extension-elements-highlight",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "lint": "eslint ./apps --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint ./apps --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix"
    },
    "packageManager": "pnpm@8.15.1",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.57.1",
        "eslint-config-next": "^15.5.2"
    }
}
