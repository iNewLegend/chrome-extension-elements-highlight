{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome Extension",
            "type": "chrome",
            "request": "launch",
            "url": "https://github.com/iNewLegend/iNewLegend",
            "webRoot": "${workspaceFolder}/apps/frontend",
            "sourceMaps": true,
            "runtimeExecutable": "stable",
            "runtimeArgs": [
                "--disable-web-security",
                "--load-extension=${workspaceFolder}/apps/frontend/extension",
                "--user-data-dir=${workspaceFolder}/.vscode/chrome-debug-profile"
            ],
            "preLaunchTask": "Watch Extension",
            "skipFiles": [
                "chrome-extension://*",
                "chrome-error://*",
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "presentation": {
                "hidden": false,
                "group": "Extension",
                "order": 1
            }
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/apps/frontend",
            "sourceMaps": true
        }
    ]
}
